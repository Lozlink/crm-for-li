{
  "name": "realestate-crm",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "build:mobile": "turbo run build --filter=mobile",
    "build:web": "turbo run build --filter=web",
    "type-check": "turbo run type-check",
    "type-check:mobile": "turbo run type-check --filter=mobile",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:deep": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "mobile:ios": "pnpm --filter=mobile ios",
    "mobile:android": "pnpm --filter=mobile android",
    "mobile:start": "pnpm --filter=mobile start",
    "mobile:build:dev": "pnpm --filter=mobile build:dev",
    "mobile:build:preview": "pnpm --filter=mobile build:preview",
    "mobile:build:production": "pnpm --filter=mobile build:production",
    "install:all": "pnpm install",
    "eas-build-pre-install": "corepack enable && corepack prepare pnpm@10.27.0 --activate"
  },
  "devDependencies": {
    "turbo": "^2.8.2",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.52.0"
  }
}
